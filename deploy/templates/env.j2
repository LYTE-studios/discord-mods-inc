# Discord Configuration
DISCORD_TOKEN={{ discord_token }}
DISCORD_GUILD_ID={{ discord_guild_id }}

# Supabase Configuration
SUPABASE_URL={{ supabase_url }}
SUPABASE_KEY={{ supabase_key }}

# OpenAI Configuration
OPENAI_API_KEY={{ openai_api_key }}
OPENAI_MODEL={{ openai_model | default('gpt-4') }}
OPENAI_MAX_TOKENS={{ openai_max_tokens | default(1000) }}
OPENAI_TEMPERATURE={{ openai_temperature | default(0.7) }}

# GitHub Configuration
GITHUB_TOKEN={{ github_token }}
GITHUB_ORG={{ github_org }}
GITHUB_WEBHOOK_SECRET={{ github_webhook_secret }}
GITHUB_NOTIFICATIONS_CHANNEL={{ github_notifications_channel }}

# Webhook Server Configuration
WEBHOOK_HOST={{ webhook_host | default('0.0.0.0') }}
WEBHOOK_PORT={{ webhook_port | default(5000) }}

# Security Configuration
JWT_SECRET_KEY={{ jwt_secret_key }}
JWT_ALGORITHM={{ jwt_algorithm | default('HS256') }}
JWT_EXPIRATION_HOURS={{ jwt_expiration_hours | default(24) }}
ENCRYPTION_KEY={{ encryption_key }}
RATE_LIMIT_CALLS={{ rate_limit_calls | default(100) }}
RATE_LIMIT_PERIOD={{ rate_limit_period | default(60) }}

# Monitoring Configuration
MONITORING_INTERVAL={{ monitoring_interval | default(60) }}
MONITORING_NOTIFICATIONS_CHANNEL={{ monitoring_notifications_channel }}
METRICS_RETENTION_DAYS={{ metrics_retention_days | default(30) }}

# Alert Thresholds
ALERT_THRESHOLD_CPU={{ alert_threshold_cpu | default(80.0) }}
ALERT_THRESHOLD_MEMORY={{ alert_threshold_memory | default(80.0) }}
ALERT_THRESHOLD_API_LATENCY={{ alert_threshold_api_latency | default(2000.0) }}
ALERT_THRESHOLD_ERROR_RATE={{ alert_threshold_error_rate | default(5.0) }}
ALERT_THRESHOLD_DISK={{ alert_threshold_disk | default(90.0) }}

# Logging Configuration
LOG_LEVEL={{ log_level | default('INFO') }}
LOG_FILE={{ log_file | default('bot.log') }}